<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".expandablelistview.ExpandableListViewDemoActivity"
        >

        <ExpandableListView
            android:id="@+id/expandable_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indicatorStart="8dp"
            android:indicatorEnd="?android:attr/expandableListPreferredItemIndicatorRight"
            android:childIndicator="@drawable/ic_close_icon"
            android:childIndicatorLeft="0dp"
            android:childIndicatorRight="0dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="2dp"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>