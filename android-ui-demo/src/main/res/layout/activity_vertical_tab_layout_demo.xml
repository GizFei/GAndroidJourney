<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tablayout.ColumnTabLayoutDemoActivity">

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicator="@drawable/ic_close_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:tabIndicatorAnimationDuration="2000"
            >

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                />

        </com.google.android.material.tabs.TabLayout>

        <coder.giz.android.uidemo.tablayout.ColumnTabLayout
            android:id="@+id/column_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            app:ctl_indicator="@drawable/avatar"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/iv_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:src="@drawable/ic_close_icon"
                android:adjustViewBounds="false"
                android:alpha="0.5"
                />

            <ImageView
                android:id="@+id/iv_image2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/avatar"
                android:adjustViewBounds="true"
                android:alpha="0.5"
                />

            <ImageView
                android:id="@+id/iv_image3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/avatar"
                android:adjustViewBounds="true"
                android:alpha="0.5"
                />

        </coder.giz.android.uidemo.tablayout.ColumnTabLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
