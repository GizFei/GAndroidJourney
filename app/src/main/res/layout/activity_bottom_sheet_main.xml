<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".BottomSheetMainActivity">

            <TextView
                style="@style/YFTextView.Main"
                android:id="@+id/tv_base_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="基类：BaseBottomSheetDialog"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

            <Button
                style="@style/YFButton.ActionButton"
                android:id="@+id/btn_full_featured_dialog"
                android:text="FullFeaturedBottomSheetDialog"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_base_dialog"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

            <Button
                style="@style/YFButton.ActionButton"
                android:id="@+id/btn_fullscreen"
                android:text="Fullscreen"
                app:layout_constraintTop_toBottomOf="@id/btn_full_featured_dialog"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

            <Button
                style="@style/YFButton.ActionButton"
                android:id="@+id/btn_top_spaced_64"
                android:text="TopSpaced-64dp"
                app:layout_constraintTop_toBottomOf="@id/btn_fullscreen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

            <Button
                style="@style/YFButton.ActionButton"
                android:id="@+id/btn_top_spaced_200"
                android:text="TopSpaced-200dp"
                app:layout_constraintTop_toBottomOf="@id/btn_top_spaced_64"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

            <Button
                style="@style/YFButton.ActionButton"
                android:id="@+id/btn_no_dim"
                android:text="NoDim"
                app:layout_constraintTop_toBottomOf="@id/btn_top_spaced_200"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

            <TextView
                style="@style/YFTextView.Main"
                android:id="@+id/tv_base_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="基类：BaseBottomSheetDialog"
                app:layout_constraintTop_toBottomOf="@id/btn_no_dim"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

            <Button
                style="@style/YFButton.ActionButton"
                android:id="@+id/btn_full_featured_fragment"
                android:text="FullFeaturedBottomSheetFragment"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_base_fragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

            <Button
                style="@style/YFButton.ActionButton"
                android:id="@+id/btn_fullscreen_fragment"
                android:text="FullscreenFragment"
                app:layout_constraintTop_toBottomOf="@id/btn_full_featured_fragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

            <Button
                style="@style/YFButton.ActionButton"
                android:id="@+id/btn_top_spaced_64_fragment"
                android:text="TopSpaced-64dpFragment"
                app:layout_constraintTop_toBottomOf="@id/btn_fullscreen_fragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

            <Button
                style="@style/YFButton.ActionButton"
                android:id="@+id/btn_top_spaced_200_fragment"
                android:text="TopSpaced-200dpFragment"
                app:layout_constraintTop_toBottomOf="@id/btn_top_spaced_64_fragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

            <Button
                style="@style/YFButton.ActionButton"
                android:id="@+id/btn_no_dim_fragment"
                android:text="NoDimFragment"
                app:layout_constraintTop_toBottomOf="@id/btn_top_spaced_200_fragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

            <com.google.android.material.switchmaterial.SwitchMaterial
                style="@style/YFSwitch.Action"
                android:id="@+id/switch_cancelable"
                android:text="IsCancelable"
                android:checked="true"
                app:layout_constraintTop_toBottomOf="@id/btn_no_dim_fragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

            <com.google.android.material.switchmaterial.SwitchMaterial
                style="@style/YFSwitch.Action"
                android:id="@+id/switch_hideable"
                android:text="IsHideable"
                android:checked="true"
                app:layout_constraintTop_toBottomOf="@id/switch_cancelable"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

            <Button
                style="@style/YFButton.ActionButton"
                android:id="@+id/btn_preview_fragment"
                android:text="FragmentInActivity"
                app:layout_constraintTop_toBottomOf="@id/switch_hideable"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>
