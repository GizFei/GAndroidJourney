<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- YFUi Button 按钮样式 -->
    <style name="YFUi.Widget.Button" />

    <style name="YFUi.Widget.Button.Wireframe" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/bg_round_corner_outline</item>
        <item name="cornerRadius">36dp</item>
    </style>
    <style name="YFUi.Widget.Button.Wireframe.FullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
    </style>

    <!-- YFUi Button：实心按钮
         需要在 MaterialButton 控件上使用。
         但是实际测试中发现，普通的 Button 也有效果。 -->
    <style name="YFUi.Widget.Button.Solid" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
    </style>
    <style name="YFUi.Widget.Button.Solid.Primary">
        <item name="android:textColor">@color/yfui_btn_solid_text_color</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/yfui_btn_solid_primary_stroke</item>
        <item name="backgroundTint">@color/yfui_btn_solid_primary_background</item>
    </style>
    <style name="YFUi.Widget.Button.Solid.Primary.NoRipple">
        <item name="rippleColor">@null</item>
    </style>
    <style name="YFUi.Widget.Button.Solid.Primary.FullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    <style name="YFUi.Widget.Button.Solid.Success">
        <item name="android:textColor">@color/yfui_btn_solid_text_color</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/yfui_btn_solid_success_stroke</item>
        <item name="backgroundTint">@color/yfui_btn_solid_success_background</item>
    </style>
    <style name="YFUi.Widget.Button.Solid.Success.NoRipple">
        <item name="rippleColor">@null</item>
    </style>
    <style name="YFUi.Widget.Button.Solid.Info">
        <item name="android:textColor">@color/yfui_btn_solid_text_color</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/yfui_btn_solid_info_stroke</item>
        <item name="backgroundTint">@color/yfui_btn_solid_info_background</item>
    </style>
    <style name="YFUi.Widget.Button.Solid.Info.NoRipple">
        <item name="rippleColor">@null</item>
    </style>
    <style name="YFUi.Widget.Button.Solid.Warning">
        <item name="android:textColor">@color/yfui_btn_solid_warning_text_color</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/yfui_btn_solid_warning_stroke</item>
        <item name="backgroundTint">@color/yfui_btn_solid_warning_background</item>
    </style>
    <style name="YFUi.Widget.Button.Solid.Warning.NoRipple">
        <item name="rippleColor">@null</item>
    </style>
    <style name="YFUi.Widget.Button.Solid.Error">
        <item name="android:textColor">@color/yfui_btn_solid_text_color</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/yfui_btn_solid_error_stroke</item>
        <item name="backgroundTint">@color/yfui_btn_solid_error_background</item>
    </style>
    <style name="YFUi.Widget.Button.Solid.Error.NoRipple">
        <item name="rippleColor">@null</item>
    </style>

    <!-- YFUi Button：实心浅色按钮 -->
    <style name="YFUi.Widget.Button.SolidLight" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
    </style>
    <style name="YFUi.Widget.Button.SolidLight.Primary">
        <item name="android:textColor">@color/yfui_btn_solid_light_primary_text_color</item>
        <item name="backgroundTint">@color/yfui_btn_solid_light_primary_background</item>
    </style>
    <style name="YFUi.Widget.Button.SolidLight.Success">
        <item name="android:textColor">@color/yfui_btn_solid_light_success_text_color</item>
        <item name="backgroundTint">@color/yfui_btn_solid_light_success_background</item>
    </style>
    <style name="YFUi.Widget.Button.SolidLight.Info">
        <item name="android:textColor">@color/yfui_btn_solid_light_info_text_color</item>
        <item name="backgroundTint">@color/yfui_btn_solid_light_info_background</item>
    </style>
    <style name="YFUi.Widget.Button.SolidLight.Warning">
        <item name="android:textColor">@color/yfui_btn_solid_light_warning_text_color</item>
        <item name="backgroundTint">@color/yfui_btn_solid_light_warning_background</item>
    </style>
    <style name="YFUi.Widget.Button.SolidLight.Error">
        <item name="android:textColor">@color/yfui_btn_solid_light_error_text_color</item>
        <item name="backgroundTint">@color/yfui_btn_solid_light_error_background</item>
    </style>

    <!-- YFUi Button：轮廓线按钮 -->
    <style name="YFUi.Widget.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
    </style>
    <style name="YFUi.Widget.Button.Outlined.Primary">
        <item name="android:textColor">@color/yfui_btn_outlined_primary_text_color</item>
        <item name="rippleColor">@color/primary_normal</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/yfui_btn_outlined_primary_stroke</item>
        <item name="backgroundTint">@color/yfui_btn_outlined_primary_background</item>
    </style>
    <style name="YFUi.Widget.Button.Outlined.Success">
        <item name="android:textColor">@color/yfui_btn_outlined_success_text_color</item>
        <item name="rippleColor">@color/success_normal</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/yfui_btn_outlined_success_stroke</item>
        <item name="backgroundTint">@color/yfui_btn_outlined_success_background</item>
    </style>
    <style name="YFUi.Widget.Button.Outlined.Info">
        <item name="android:textColor">@color/yfui_btn_outlined_info_text_color</item>
        <item name="rippleColor">@color/info_normal</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/yfui_btn_outlined_info_stroke</item>
        <item name="backgroundTint">@color/yfui_btn_outlined_info_background</item>
    </style>
    <style name="YFUi.Widget.Button.Outlined.Warning">
        <item name="android:textColor">@color/yfui_btn_outlined_warning_text_color</item>
        <item name="rippleColor">@color/warning_normal</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/yfui_btn_outlined_warning_stroke</item>
        <item name="backgroundTint">@color/yfui_btn_outlined_warning_background</item>
    </style>
    <style name="YFUi.Widget.Button.Outlined.Error">
        <item name="android:textColor">@color/yfui_btn_outlined_error_text_color</item>
        <item name="rippleColor">@color/error_normal</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/yfui_btn_outlined_error_stroke</item>
        <item name="backgroundTint">@color/yfui_btn_outlined_error_background</item>
    </style>

</resources>