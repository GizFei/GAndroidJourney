<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.YFUi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- 无工具栏主题 -->
    <style name="Theme.YFUi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Switch开关样式 -->
    <style name="YFSwitch" />
    <style name="YFSwitch.Action" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="switchMinWidth">56dp</item>
    </style>

    <!-- 文本视图样式 -->
    <style name="YFTextView" />
    <style name="YFTextView.Main" parent="TextAppearance.MaterialComponents.Body1" />
    <style name="YFTextView.Title1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">36sp</item>
    </style>
    <style name="YFTextView.Title2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="YFTextView.Title3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="YFTextView.SubTitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_dark</item>
    </style>
    <style name="YFTextView.SubTitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_dark</item>
    </style>

    <!-- 文本样式 -->
    <style name="YFTextAppearance" />
    <style name="YFTextAppearance.Main" parent="TextAppearance.MaterialComponents.Body1" />

</resources>